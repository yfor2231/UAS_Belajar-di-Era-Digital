{q:"45. Inti strategi bisnis internasional …",o:["Keunggulan bersaing","Ekspansi","Skala","Produksi"],a:0,e:"Fokus pada keunggulan bersaing."}
];

let html="";
questions.forEach((q,i)=>{
html+=`<div class="question"><p>${q.q}</p>`;
q.o.forEach((opt,j)=>{
html+=`<label><input type="radio" name="q${i}" value="${j}"> ${opt}</label>`;
});
html+=`</div>`;
});
document.getElementById("quizForm").innerHTML=html;

let time=90*60;
setInterval(()=>{
let m=Math.floor(time/60),s=time%60;
document.getElementById("timer").innerText=`Sisa waktu: ${m}:${s<10?"0"+s:s}`;
time--;
if(time<0) submitQuiz();
},1000);

function submitQuiz(){
let score=0, out="";
questions.forEach((q,i)=>{
let ans=document.querySelector(`input[name=q${i}]:checked`);
if(ans && parseInt(ans.value)==q.a) score++;
out+=`<p><b>${q.q}</b><br>Jawaban: ${q.o[q.a]}<br><i>${q.e}</i></p>`;
});
document.getElementById("result").innerHTML=`<h3>Nilai Anda: ${score}/45</h3>`+out;
window.scrollTo(0,document.body.scrollHeight);
}
